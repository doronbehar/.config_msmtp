defaults
	auth on
	tls on
	tls_trust_file /etc/ssl/certs/ca-certificates.crt
	logfile ~/.msmtp.log

account gmail
	host smtp.gmail.com
	port 587
	from doron.behar@gmail.com
	user doron.behar
	auth plain
	passwordeval gkeyring --id 35 --output secret

account vps
	host smtp.doronbehar.com
	from me@doronbehar.com
	user doron
	auth plain
	passwordeval gkeyring --id 36 --output secret

account default : gmail

