defaults
	auth on
	tls on
	tls_trust_file /etc/ssl/certs/ca-certificates.crt
	logfile ~/.msmtp.log

account gmail
	host smtp.gmail.com
	port 587
	from doron.behar@gmail.com
	user doron.behar
	auth plain
	passwordeval secret-tool lookup user doron.behar@gmail.com

account vps
	host smtp.doronbehar.com
	from me@doronbehar.com
	user doron
	auth plain
	passwordeval secret-tool lookup user me@doronbehar.com

account default : gmail

# vim:ft=msmtp
